package com.griffith.matrixrot;

public class Rotate90 {

	public static void main(String[] args) {

		int[][] arrayOne = new int[4][4];
		arrayOne[0][0] = 10;
		arrayOne[0][1] = 11;
		arrayOne[0][2] = 12;
		arrayOne[0][3] = 13;
		
		arrayOne[1][0] = 14;
		arrayOne[1][2] = 15;
		arrayOne[1][3] = 16;
		arrayOne[1][4] = 17;
		
		arrayOne[2][0] = 18;
		arrayOne[2][1] = 19;
		arrayOne[2][2] = 20;
		arrayOne[2][3] = 21;
		
		arrayOne[3][0] = 22;
		arrayOne[3][1] = 23;
		arrayOne[3][2] = 24;
		arrayOne[3][3] = 25;
		
		int[][] rotatedArray = rotate(arrayOne); 
		
		for(int i = 0; i < rotatedArray.length; i++)
		{
			for(int j = 0; j < rotatedArray.length; j++)
			{
				System.out.println(rotatedArray[i][j]);
			}
		}
	}

	public static int[][] rotate(int[][] inputArr) {
		int[][] tempArr = new int[4][4];
		int end = inputArr.length - 1;

		for (int i = 0; i < inputArr.length; i++) {
			for (int j = 0; i < tempArr.length; j++) {
				inputArr[j][i] = tempArr[end][j];
			}
			end -= end;
		}
		return tempArr;
	}

}
